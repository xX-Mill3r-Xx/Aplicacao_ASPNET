@model WebLearn.Models.Cadastro

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-light">Deletar Registros</h1>

<h3 class="text-light">Tem certeza que deseja deletar o registro selecionado?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2 text-light">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10 text-light">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
