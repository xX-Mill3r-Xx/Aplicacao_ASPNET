@model IEnumerable<WebLearn.Models.Cadastro>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-light">Cadastrar Usuarios</h1>

<p>
    <a asp-action="Create" class=" btn btn-dark text-light">Incluir Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="text-light">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-light">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="text-light"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-light">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-light">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark text-light">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark text-light">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-dark text-light">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
